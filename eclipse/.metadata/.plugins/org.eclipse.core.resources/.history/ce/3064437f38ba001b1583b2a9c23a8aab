package oo.composicao.MuitosParaMuitos;

public class Main {
	// tanto da para adicionar ao curso pela instancia curso, quanto pela instancia aluno
	public static void main(String[] args) {
		Aluno aluno1 = new Aluno("Pedro");
		Aluno aluno2 = new Aluno("Maria");
		Aluno aluno3 = new Aluno("Antonia");
		
		Curso curso1 = new Curso("Java Completo");
		Curso curso2 = new Curso("Web 2033");
		
		curso1.adicionarAluno(aluno2);
		curso2.adicionarAluno(aluno3);
		
		aluno1.adicionarCurso(curso1);
		aluno1.adicionarCurso(curso2);
		aluno3.adicionarCurso(curso1);
		
		for( Aluno aluno: curso1.alunos) {
			System.out.println(aluno.nome);
		}
		
		System.out.println(aluno1.cursos.get(0).alunos);
		
		Curso encontrado = aluno1.obterCursoPorNome("Web 2033");
		
		if(encontrado != null) {
			for( Aluno aluno: encontrado.alunos) {
				System.out.println(aluno.nome);
			}
		}
		

	}

}
